@{
    ViewData["Title"] = "Fast question";
}
<h2>@ViewBag.Title</h2>
<hr />

<form id="fastQuestionForm">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Question:</label>
        <div class="col-sm-10">
            <textarea type="text" class="form-control" id="fastQuestion" placeholder="Enter question" style="resize: none;" minlength="3" rows="4"></textarea>
            <div id="err_q" class="validation-summary-errors text-danger" data-valmsg-summary="true"></div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Answer type:</label>
        <div class="col-sm-10">
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="radioA" value="text" checked>
                    free text
                </label>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="radioA" value="choice">
                    multiple choice
                </label>
            </div>
        </div>
    </div>

    <div class="form-group row" id="nrCharactersAnswerDiv">
        <label class="col-sm-2 col-form-label">Answer maximum number of characters:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="nrCharactersAnswer" placeholder="Enter number of characters">
        </div>
    </div>

    <div id="answers" style="display: none">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Answer option 1:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="answer1" placeholder="Enter answer">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <button type="button" class="col-sm-2 btn btn-primary" style="margin-right: 20px" onclick="validateQ()">Submit</button>
        <button type="button" class="col-sm-2 btn btn-default" id="buttonAddAnswer" onclick="addAnswer()" style="display: none;">Add answer</button>
    </div>

</form>
   
