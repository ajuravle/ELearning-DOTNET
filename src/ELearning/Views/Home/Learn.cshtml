@{
    ViewData["Title"] = "Learn";
}

<div class="container-fluid text-center" style="margin-top: 2%">
    <div class="row content">
        
        <div class="col-sm-3 sidenav">
            <h3>Topics</h3>
            <div class="list-group" style="margin-top: 10%">
                <button type="button" class="list-group-item">Topic 1</button>
                <button type="button" class="list-group-item">Topic 2</button>
                <button type="button" class="list-group-item">Topic 3</button>
                <button type="button" class="list-group-item">Topic 4</button>
                <button type="button" class="list-group-item">Topic 5</button>
            </div>
           
            <div id="buttonList"></div>

        </div>

        <div class="col-sm-9 text-left">
            
            <div class="col-sm-12">
                <br>
                <div id="myCarousel" class="carousel slide">
                    
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/images/courses/dotnet.png" alt="Chania" width="460" height="345" style="margin: 0 auto;">
                        </div>

                        <div class="item">
                            <img src="~/images/courses/java.png" alt="Chania" width="460" height="345" style="margin: 0 auto;">
                        </div>

                        <div class="item">
                            <img src="~/images/courses/python.png" alt="Flower" width="460" height="345" style="margin: 0 auto;">
                        </div>

                        <div class="item">
                            <img src="~/images/courses/cpp.png" alt="Flower" width="460" height="345" style="margin: 0 auto;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    $(function() {
        $('.carousel').each(function(){
            $(this).carousel({
                interval: false
            });
        });
    });​
</script>